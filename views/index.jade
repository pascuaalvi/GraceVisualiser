doctype html
head    
    title #{title}
    link(rel='stylesheet', href='stylesheets/layout.css')
    script(src='scripts/http-client.js')
    script(src='scripts/minigrace.js')
    script(src='scripts/setup.js')   
  body.horizontal
    nav#left-sidebar.vertical.no-select.fill-height
      header.header.horizontal
        #upload.upload.button &#x21AF; Upload
        .fill
        #new-file.new.button &oplus; New
      input#upload-input(type='file', multiple='')         
      ul#file-tree.fill         
      #version     
    #left-sidebar-resize.no-select     
    #grace-view.view.horizontal.fill.fill-height.hidden
      section.open-file.vertical.fill.no-select
        header.header.horizontal
          .file-label File Name:                 
          .fill
            .file-name                     
            input.file-name-input                 
          .fill                 
          a.download.button(download='new-file.grace') &#x21AF; Download                 
          .fill                 
          .saveFile.button &#x270D; Save                 
          .fill                 
          a.visualize.button(href='/code') &#x2315; Code History                 
          .fill                 
          .delete.button &otimes; Delete
        .editor.fill.fill-height         
      section.feedback.fill.vertical
        .compilation.no-select
          header.header.horizontal.waiting
            .run.button.fill
              span.label.run Run                         
              span.icon &#x25B6;                     
            .build.fill.button
              span.label.build Build                         
              span.icon &#x2692;                     
            .wait.fill
              span.label Building
              span.dots ...                     
            .stop.button.fill
              span.label.stop Stop                         
              span.icon &#x25A0;
        pre.output.fill
    #image-view.view.horizontal.fill.fill-height.hidden
      img(src='', width='700', height='550', alt='Image file')     
    #audio-view.view.horizontal.fill.fill-height.hidden
      audio(controls='')
        source(src='', type='')  
    #minigrace-dump
      input#debugtoggle(type='checkbox')